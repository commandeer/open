{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2019",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    ".idea",
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
